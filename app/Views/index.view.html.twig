{% extends "base.html.twig" %}

{% block body %}

    {% if(activeId) %}
    <div class="container p-6 rounded-3 m-4">
        <h1 class="text-xl-center h2 m-4"> Welcome to your news page profile</h1>
    </div>

        {% include('inc/profile.html.twig') %}

        <div style="height: 200px"></div>
    {% endif %}

    {% if(activeId == false) %}
    {% include('inc/hero.html.twig') %}
    <div class="container p-6 rounded-3 m-4">
        <h1 class="text-xl-center h2 m-4"> Local And Worldwide News</h1>
    </div>

    <div class="container">
        <div class="all-news-card container row">
            {% for article in articles %}
                <div class="shadow-card w-25 rounded col-md-3 position-relative">

                    <div class="container mt-4">
                        {% if article.urlToImage != "" %}

                            <img
                                    class="img-thumbnail img-responsive" alt="There was a picture ^-^"
                                    src="{{ article.urlToImage }}"
                            />

                        {% endif %}
                        <div class="text-start">
                            {% if article.author != "" %}
                                <p class="m-1">
                                    <small class="small">{{ article.publishedAt }}</small>
                                <p class="small">By:
                                    <em class=" m-1">
                                        {{ article.author }}
                                    </em>
                                </p>
                            {% endif %}
                            {% if article.source != "" %}
                                at: {{ article.source }}
                            {% endif %}



                            <small class="small">{{ article.title[:40] ~ '...' }}</small>
                            <small class="small">{{ article.description[:25] ~ '...' }}</small>

                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>
    </div>

    {% endif %}
{% endblock %}
